#!/usr/bin/env node
const yargs = require('yargs')

const { assetsOptionBuilder, unpackAssets } = require('../cli/assets.js')


const argv = yargs.usage('Usage: $0 path/to/destination/dir [options]')
  .command('assets', 'Copies assets to a local directory', assetsOptionBuilder)
  .help('help', 'help <command> for more details')
  .alias('help', 'h')
  .argv

const command = argv._[0]
if (command === 'assets') unpackAssets(argv)
